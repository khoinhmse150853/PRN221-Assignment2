@page
@model NguyenHuynhMinhKhoiRazorPages.Pages.CustomerInfo.RentingHistoryModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RentingHistory[0].Customer.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentingHistory[0].Car.CarName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentingHistory[0].PickupDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentingHistory[0].ReturnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentingHistory[0].RentPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RentingHistory)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.CarName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PickupDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RentPrice)
                </td>
            </tr>
        }
    </tbody>
</table>
